<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AlimentosMarfim</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/sidebar.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/css/materialize.min.css">
</head>
<body>
  <div class="d-flex" id="wrapper">

    <div class="bg-light border-right" id="sidebar-wrapper">
      <div class="sidebar-heading">Menu </div>
      <div class="list-group list-group-flush">
        <a href="Cargos" class="list-group-item list-group-item-action bg-light">Cargos</a>
        <a href="Clientes" class="list-group-item list-group-item-action bg-light">Clientes</a>
        <a href="Funcionarios" class="list-group-item list-group-item-action bg-light">Funcionarios</a>
        <a href="Pedidos" class="list-group-item list-group-item-action bg-light">Pedidos</a>
        <a href="Produtos" class="list-group-item list-group-item-action bg-light">Produtos</a>
        <a href="Setores" class="list-group-item list-group-item-action bg-light">Setores</a>
      </div>
    </div>
    

    
    <div id="page-content-wrapper">

      <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
        <button class="btn btn-primary" id="menu-toggle">Menu</button>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
           <partial name="_LoginPartial" />
            </li>
          </ul>
        </div>
      </nav>

      <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
      </div>
    </div>
    
    <br /><br /><br /><br /><br />
    <br><br>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/mascara.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    
    
      <script>
          $(function(){
            $("#menu-toggle").click(function(e) {
                e.preventDefault();
                $("#wrapper").toggleClass("toggled");
            });
            
              if($(window).width()>=50){
                $("#wrapper").addClass("toggled");
              }else{
                $("#wrapper").removeClass("toggled");
              }
        
          });
  </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
